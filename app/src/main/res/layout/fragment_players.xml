<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.albertocamillo.foosballranking.fragment.PlayersFragment">
    <ListView
        android:id="@+id/list_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    <TextView android:id="@+id/emptyElement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="No Results. Please, add a player!" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add"
        android:layout_margin="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_refresh_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_refresh"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_bottom_margin"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>